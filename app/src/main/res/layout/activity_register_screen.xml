<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait"
    tools:context=".RegisterScreen">

    <ImageView
        android:id="@+id/image"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/light_bulb" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/irish_grover"
        android:hint="Enter your username"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/irish_grover"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/userEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/irish_grover"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/registerBtn"
        android:layout_marginTop="-30dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/userPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:fontFamily="@font/irish_grover"
        android:text="Register as Student"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="25dp" />

    <Button
        android:id="@+id/admin_registerBtn"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/registerBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:fontFamily="@font/irish_grover"
        android:text="Register as Teacher"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="25dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_registerBtn"
        android:layout_alignStart="@+id/userPassword"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/irish_grover"
        android:text="Have an account?"
        android:textColor="@color/white"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_registerBtn"
        android:layout_toEndOf="@+id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/irish_grover"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:clickable="true"/>

</RelativeLayout>