<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait"
    tools:context=".LoginScreen">

    <ImageView
        android:id="@+id/image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/light_bulb" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/irish_grover"
        android:hint="Enter your email"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/userEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/irish_grover"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/studentBtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/userPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:text="Login as student"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:cornerRadius="25dp" />

    <Button
        android:id="@+id/adminBtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/studentBtn"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:text="Login as teacher"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:cornerRadius="25dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminBtn"
        android:layout_alignStart="@+id/userPassword"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/irish_grover"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminBtn"
        android:layout_toEndOf="@+id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/irish_grover"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:clickable="true" />

</RelativeLayout>