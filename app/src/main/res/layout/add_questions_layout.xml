<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".CreateQuestionScreen">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cream"
        app:cardCornerRadius="35dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:background="@drawable/card_view_bg3"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/irish_grover"
                android:text="Create A Question"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.045" />

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/irish_grover"
                android:text="Enter a question"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="-18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.135" />

            <EditText
                android:id="@+id/questionsText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@id/textQuestion"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_bg2"
                android:ems="10"
                android:fontFamily="@font/irish_grover"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginTop="-40dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.21" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionsText"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/irish_grover"
                android:text="Choice 1"
                android:layout_marginTop="-29dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.292" />

            <EditText
                android:id="@+id/choice1Text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_bg2"
                android:ems="10"
                android:fontFamily="@font/irish_grover"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="-45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.354" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choice1Text"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/irish_grover"
                android:text="Choice 2"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="-56dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432" />

            <EditText
                android:id="@+id/choice2Text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_bg2"
                android:ems="10"
                android:fontFamily="@font/irish_grover"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="-85dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choice2Text"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/irish_grover"
                android:text="Choice 4"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="-225dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.712" />

            <EditText
                android:id="@+id/choice3Text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text3"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_bg2"
                android:ems="10"
                android:fontFamily="@font/irish_grover"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="-169dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.646" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choice3Text"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/irish_grover"
                android:text="Choice 3"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="-115dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.573" />

            <EditText
                android:id="@+id/choice4Text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text4"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_bg2"
                android:ems="10"
                android:fontFamily="@font/irish_grover"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="-380dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.792" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choice4Text"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/irish_grover"
                android:text="Right Answer"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.573" />

            <EditText
                android:id="@+id/rightAnswerText"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text5"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_bg2"
                android:ems="10"
                android:fontFamily="@font/irish_grover"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.792" />

            <Button
                android:id="@+id/addBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/choice4Text"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/irish_grover"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.909" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>