<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_landscape">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Profile Overview"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:fontFamily="@font/irish_grover" />

    <ImageView
        android:id="@+id/adminPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/text"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/user" />

    <TextView
        android:id="@+id/adminName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/adminPic"
        android:layout_below="@+id/text"
        android:layout_marginTop="50dp"
        android:text="Admin Name"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="@font/irish_grover"/>

    <TextView
        android:id="@+id/adminEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminName"
        android:layout_toEndOf="@+id/adminPic"
        android:text="admin@gmail.com"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/irish_grover"/>

    <TextView
        android:id="@+id/changePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminEmail"
        android:layout_toEndOf="@+id/adminPic"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="Change Password"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:fontFamily="@font/irish_grover"/>

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/changePass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/homeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:fontFamily="@font/irish_grover"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="50sp" />


</RelativeLayout>