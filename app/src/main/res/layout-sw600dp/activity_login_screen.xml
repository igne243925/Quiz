<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait"
    tools:context=".LoginScreen">

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/light_bulb" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/irish_grover"
        android:hint="Enter your email"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/userEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/irish_grover"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/studentBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/userPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:text="Login as student"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:cornerRadius="25dp" />

    <Button
        android:id="@+id/adminBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/studentBtn"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:text="Login as teacher"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:cornerRadius="25dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="410dp"
        android:layout_marginStart="250dp"
        android:fontFamily="@font/irish_grover"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="340dp"
        android:layout_marginBottom="410dp"
        android:clickable="true"
        android:fontFamily="@font/irish_grover"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>