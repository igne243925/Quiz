<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait"
    tools:context=".QuizScreen">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white" />
    
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtn"
        android:layout_toEndOf="@+id/backBtn"
        android:layout_marginTop="50dp"
        android:text="QUIZ TIME!"
        android:textSize="50sp"
        android:fontFamily="@font/irish_grover"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard"
        android:layout_width="700dp"
        android:layout_height="300dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:cardElevation="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/questionText"
                android:layout_width="650dp"
                android:layout_height="250dp"
                android:fontFamily="@font/irish_grover"
                android:text="Question No.1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/choice1"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_below="@+id/questionCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/irish_grover"
        android:text="Choice 1"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_below="@id/choice1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg3"
        android:text="Choice 2"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/choice3"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_below="@+id/choice2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg4"
        android:text="Choice 3"
        android:textAllCaps="false"
        android:fontFamily="@font/irish_grover"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/choice4"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_below="@+id/choice3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/irish_grover"
        android:text="Choice 4"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/choice4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="40sp" />

</RelativeLayout>