<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait"
    tools:context=".QuickGameScoreScreen">

    <TextView
        android:id="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="You got"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="@font/irish_grover" />

    <androidx.cardview.widget.CardView
        android:id="@+id/score"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/card_view_bg2">

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="200dp"
                android:layout_height="105dp"
                android:gravity="center"
                android:text="1"
                android:textSize="100sp"
                android:textColor="@color/black"
                android:fontFamily="@font/irish_grover"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/retryBtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:text="Retry"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:cornerRadius="25dp" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/retryBtn"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/irish_grover"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:cornerRadius="25dp" />

</RelativeLayout>