<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_landscape"
    tools:context=".QuickGameScreen">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Choose your topic here!"
        android:textColor="@color/white"
        android:fontFamily="@font/irish_grover"
        android:textSize="20sp"
        />

   <GridLayout
       android:layout_width="550dp"
       android:layout_height="280dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/title"
       android:layout_marginTop="10dp"
       android:rowCount="3"
       android:columnCount="2"
       android:layout_marginBottom="20dp" >


       <androidx.cardview.widget.CardView
           android:id="@+id/math"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_row="0"
           android:layout_rowWeight="0"
           android:layout_column="0"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="25dp"
           app:cardElevation="8dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/card_view_bg"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/math" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/irish_grover"
                   android:text="Math"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="15sp" />
           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/english"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_row="0"
           android:layout_column="1"
           android:layout_gravity="fill"
           android:layout_rowWeight="0"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           android:backgroundTint="@color/purple"
           app:cardCornerRadius="25dp"
           app:cardElevation="8dp" >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/card_view_bg"
               android:orientation="vertical"
               android:gravity="center" >

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/eng"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="English"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:textAlignment="center"
                   android:fontFamily="@font/irish_grover"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/music"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_row="1"
           android:layout_column="1"
           android:layout_gravity="fill"
           android:layout_rowWeight="0"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           android:backgroundTint="@color/purple"
           app:cardCornerRadius="25dp"
           app:cardElevation="8dp" >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/card_view_bg"
               android:orientation="vertical"
               android:gravity="center" >

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/music"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Music"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:textAlignment="center"
                   android:fontFamily="@font/irish_grover"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/history"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_row="2"
           android:layout_column="0"
           android:layout_gravity="fill"
           android:layout_rowWeight="0"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           android:backgroundTint="@color/purple"
           app:cardCornerRadius="25dp"
           app:cardElevation="8dp" >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/card_view_bg"
               android:orientation="vertical"
               android:gravity="center" >

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:background="@drawable/history"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="History"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:textAlignment="center"
                   android:fontFamily="@font/irish_grover"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/pe"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_row="2"
           android:layout_column="1"
           android:layout_gravity="fill"
           android:layout_rowWeight="0"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           android:backgroundTint="@color/purple"
           app:cardCornerRadius="25dp"
           app:cardElevation="8dp" >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/card_view_bg"
               android:orientation="vertical"
               android:gravity="center" >

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:background="@drawable/pe"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="P.E"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:textAlignment="center"
                   android:fontFamily="@font/irish_grover"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:layout_column="0"
           android:layout_gravity="fill"
           android:layout_rowWeight="0"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           android:backgroundTint="@color/purple"
           app:cardCornerRadius="25dp"
           app:cardElevation="8dp" >

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_gravity="center_vertical|center_horizontal">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="English"
                   android:textColor="@color/white"
                   android:textSize="20sp"
                   android:textAlignment="center"
                   android:fontFamily="@font/irish_grover"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/science"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_row="1"
           android:layout_column="0"
           android:layout_gravity="fill"
           android:layout_rowWeight="0"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           android:backgroundTint="@color/purple"
           app:cardCornerRadius="25dp"
           app:cardElevation="8dp" >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/card_view_bg"
               android:orientation="vertical"
               android:gravity="center">

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/sci"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Science"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:textAlignment="center"
                   android:fontFamily="@font/irish_grover"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>
   </GridLayout>

</RelativeLayout>